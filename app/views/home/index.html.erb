

<h2>
	<%= link_to "Add a Prayer", new_prayer_path  %>
</h2> </br >


<%#= binding.pry %>
<% l = @prayers.length %>
<% latest_prayers =[@prayers[l-1], @prayers[l-2], @prayers[l-3]] %>

<div class="row">
	<% latest_prayers.each do |p| %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<div class="caption">
					<h3>
						<%= link_to p.title.html_safe, prayer_path(p) %>
						</h3>
					<p>
						<%= truncate(p.content, length: 100, omission: "...").html_safe { link_to "...read more", prayer_path(p) } %>
					</p>
					<p>
						<a href="#" class="btn btn-primary">
							Button
						</a>
					</p>
				</div>
			</div>
		</div>
	<% end %>
</div>
<div>
</div>


<h2>Recently added...</h2>
<% @prayers.each do |p| %>
	<%= link_to p.title, prayer_path(p) %></br >
<% end %>